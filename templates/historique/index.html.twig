{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> {{ page_name }} ✅</h1>
    <a href="{{ path('app_historique', {'annee':annee-1}) }}">⬅️ {{annee-1}}</a>  - {{annee}} - <a href="{{ path('app_historique', {'annee':annee+1}) }}">{{annee+1}} ➡️</a>
    {{ render_chart(chart) }}
    <br />
    <a href="{{ path('historique_edit') }}">Create</a>
    <table class='t1'>
        <thead>
            <tr>
                <th colspan="3">Liste des données</th>
            </tr>
            <tr>
                <th colspan="1">montant</th>
                <th colspan="1">date</th>
                <th colspan="1">actions</th>
            </tr>
        </thead>
        <tbody>
            {% for historique in historiques %}
                <tr>
                    <td>{{historique.montant}}</td>
                    <td>{{historique.periode|date("m/d/Y")}}</td>
                    <td><a href="{{ path('historique_edit', {'id':historique.id}) }}">edit</a> / <a href="{{ path('historique_delete', {'id':historique.id}) }}">delete</a></td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div>
{% endblock %}
